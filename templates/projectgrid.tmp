<script src="js/project.js"></script>
<link rel="stylesheet" href="style/project.css">
<nav class="paginator">
    <a href="#" onclick="toPage(1);">‚á§</a>
    <a href="#" onclick="toPage(page - 1 > 0 ? page - 1 : page);">ü°ê</a>
    <span class="page"></span> / <span class="total-pages"></span>
    <a href="#" onclick="toPage(page + 1 < totalPages ? page + 1 : totalPages);">ü°í</a>
    <a href="#" onclick="toPage(totalPages);">‚á•</a>
</nav>
<div class="projects pure-g"></div>
<script>
    var projectsDiv = document.querySelector('.projects'),
        pageSpan = document.querySelector('.paginator .page'),
        totalPagesSpan = document.querySelector('.paginator .total-pages'),
        page = 1,
        totalPages = 1,
        pageSize = ${pageSize} || 15;

    toPage(1);

    function toPage (pageNumber) {
        projectsDiv.innerHTML = '';
        beganLoading('.projects');
        SnapCloud.getPublishedProjectList(
            $user,
            pageNumber,
            pageSize,
            getUrlParameter('term') || null,
            function (response) {
                setTitle($title);
                totalPages = response.pages;
                totalPagesSpan.textContent = totalPages;
                if (response.projects[0]) {
                    response.projects.forEach(function (project) {
                        projectsDiv.append(
                                newProjectDiv(
                                project,
                                {
                                    size: 'small',
                                    gridSize: 5,
                                    extraFields: {
                                        author: 'username'
                                    }
                                }));
                    });
                }
                doneLoading('.projects');
            },
            function (error) {
                genericError(error);
            }
        );
        page = pageNumber;
        pageSpan.textContent = pageNumber;
    };
   </script>
