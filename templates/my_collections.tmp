<script src="js/project.js"></script>
<script src="js/dialog.js"></script>
<link rel="stylesheet" href="style/project.css">
<h1 localizable>My Collections</h1>
<div class="bar">
    @param actionPage="my_collections"
    @include=search_bar
    @include=paginator
</div>
<div class="collections list pure-g"></div>
<script>
    var collectionsDiv = document.querySelector('.collections'),
        my_collections_pageSpan = document.querySelector('.my_collections.paginator .page'),
        my_collections_totalPagesSpan = document.querySelector('.my_collections.paginator .total-pages'),
        my_collections_page = 1,
        my_collections_totalPages = 1,
        my_collections_pageSize = ${pageSize} || 15;

    my_collections_toPage(1);

    function my_collections_toPage (pageNumber) {
        query = getUrlParameter('query') || '';
        collectionsDiv.innerHTML = '';
        beganLoading('.collections.list');
        SnapCloud.getUserCollections(
            null, // username is implicit
            my_collections_page,
            my_collections_pageSize,
            query,
            function (response) {
                my_collections_totalPages = response.pages;
                if (my_collections_totalPages == 1) {
                    document.querySelector('.my_collections.paginator').remove();
                } else {
                    my_collections_totalPagesSpan.textContent = my_collections_totalPages;
                }
                if (response.collections[0]) {
                    response.collections.forEach(function (collection) {
                        collectionsDiv.append(
                            newCollectionDiv(
                                collection, 
                                { 
                                    size: 'small', 
                                    gridSize: 5, 
                                    extraFields: {
                                        isPublic: 'shared',
                                        isPublished: 'published'
                                    }
                                }
                            )
                        );
                    });
                } else {
                    document.querySelector('.collections').remove();
                }
                doneLoading('.collections.list');
            },
            genericError
        );

        my_collections_page = pageNumber;
        my_collections_pageSpan.textContent = pageNumber;
    };
</script>
<div class="buttons">
    <a class="pure-button new-collection">New Collection</a>
</div>
<script>
    document.querySelector('.new-collection').onclick = function () {
        prompt(
            localizer.localize('Collection name?'),
            function (collectionName) {
                SnapCloud.newCollection(
                    collectionName,
                    function (collection) {
                        location.replace(collectionURL(SnapCloud.username, collectionName));
                    },
                    genericError
                ); 
            },
            nop
        );
    };
</script>
