<script src="js/project.js"></script>
<link rel="stylesheet" href="style/project.css">
<h1 localizable>Explore</h1>
@param title='"Explore - Snap! Build Your Own Blocks"'
@param pageSize=15
@param withSearch=false
@param widgetName=explore
@include=grid
<script>
    ${widgetName}_loadPage =
        function (query, pageSize, pageNumber, onSuccess) {
            SnapCloud.getPublishedProjectList(
                null,
                pageNumber,
                pageSize,
                null, // query
                onSuccess,
                genericError,
                true // withThumbnail
            ); 
        };

    ${widgetName}_onLoadPage =
        function (response, targetElement) {
            response.projects.forEach(function (project) {
                targetElement.append(
                    newProjectDiv(
                        project, 
                        { 
                            size: 'small', 
                            gridSize: 5, 
                            extraFields: {
                                author: 'username'
                            }
                        }
                    )
                );
            }); 
        };

    ${widgetName}_initGrid();
</script>
