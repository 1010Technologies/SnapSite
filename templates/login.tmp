<h1>Log into Snap<em>!</em></h1>

<form id="login" class="pure-form pure-form-aligned">
    <fieldset>
        <div class="pure-control-group">
            <label for="username">Username</label>
            <input id="username" name="username" type="text" placeholder="Username">
        </div>

        <div class="pure-control-group">
            <label for="password">Password</label>
            <input id="password" name="password" type="password" placeholder="Password">
        </div>

        <div class="pure-controls">
            <label for="cb" class="pure-checkbox">
                <input id="cb" name="persist" type="checkbox"> keep me logged in
            </label>

            <button type="submit" class="pure-button">Log in</button>
        </div>
        <div class="pure-controls">
            <em><a href="#" onclick="">* I forgot my password</a></em>
        </div>
    </fieldset>
</form>

<script>
    document.querySelector('form#login').addEventListener('submit', function (event) {
        var username = this.elements['username'].value,
            password = this.elements['password'].value,
            persist = this.elements['persist'].checked;

        event.preventDefault();

        SnapCloud.login(
            username,
            password,
            persist,
            function () {
                sessionStorage.username = username;
                window.location.href = 'index.html';
            },
            function (response) {
                genericError(
                    'Could not login: ' + response,
                    'Login failed'
                );
            }
        );
    });
</script>
